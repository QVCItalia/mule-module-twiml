<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:twiml="http://repository.mulesoft.org/releases/org/mule/modules/twiml/mule-module-twiml"
      xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.1/mule.xsd
        http://repository.mulesoft.org/releases/org/mule/modules/twiml/mule-module-twiml http://repository.mulesoft.org/releases/org/mule/modules/twiml/mule-module-twiml/1.0/mule-twiml.xsd">

    <twiml:config/>

    <flow name="testSay">
        <twiml:say voice="WOMAN">Say Hello!</twiml:say>
    </flow>

    <flow name="testPlay">
        <twiml:play file="http://foo.com/cowbell.mp3"/>
    </flow>

    <flow name="testGather">
        <twiml:gather timeout="5" finishOnKey="*" numDigits="5" action-flow-ref="testOnGather">
            <twiml:say>Please input your ZIP code</twiml:say>
        </twiml:gather>
    </flow>

    <flow name="testOnGather">
        <twiml:say>Thank You</twiml:say>
    </flow>

</mule>
